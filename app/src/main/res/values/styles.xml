<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/nunito_font</item>
        <!--<item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>-->
    </style>
    <style name="DefaultText">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="custom_dialog_button" >
        <item name="android:text">Add Image</item>
        <item name="android:textColor">@color/transparent_white</item>
        <item name="android:background">@drawable/item_action_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="add_image_button_style" parent="custom_dialog_button">
        <item name="android:text">Add Image</item>
    </style>

    <style name="yes_button" parent="custom_dialog_button" >
        <item name="android:text">YES</item>

    </style>

    <style name="no_button" parent="custom_dialog_button" >
        <item name="android:text">NO</item>

    </style>

    <style name="close_app_button" parent="custom_dialog_button" >
        <item name="android:text">CLOSE</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>

    </style>
    <style name="v_i_dialog_style">
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/colorPrimaryLightPix</item>
    </style>


</resources>
